<?xml version="1.0" encoding="utf-8"?>
<mx:Application 
    xmlns:mx="http://www.adobe.com/2006/mxml" 
    xmlns:fluint="http://www.digitalprimates.net/2008/fluint"
    layout="absolute"
    applicationComplete="startTestProcess(event)"
    width="1024" height="768">
    
    <mx:Script>
        <![CDATA[
            import tests.PBEngineTestSuite;
            import com.pblabs.engine.core.Global;
            
            var testResources:TestResources = new TestResources();
            
            protected function startTestProcess( event:Event ) : void 
            {
                Global.startup(this);
                
                var suiteArray:Array = new Array();
                suiteArray.push( new PBEngineTestSuite("../assets/testLevel.xml") );
                testRunner.startTests( suiteArray );
            }
        ]]>
    </mx:Script>

	<fluint:TestResultDisplay width="100%" height="100%" />
	<fluint:TestRunner id="testRunner"/>
</mx:Application>